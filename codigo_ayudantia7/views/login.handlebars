<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<h1 class="text-center my-5 page-title">Iniciar sesión</h1>
			{{#if fallido}}
				<div class="alert alert-danger" role="alert">
					{{fallido}}
				</div>
			{{/if}}
			<form method="POST" action="/API/login">
				<div class="mb-3">
					<label for="user" class="form-label">Usuario</label>
					<input
						type="text"
						class="form-control"
						id="user"
						name="user"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="pass" class="form-label">Contraseña</label>
					<input
						type="password"
						class="form-control"
						id="pass"
						name="pass"
						required
					/>
				</div>
				<button type="submit" class="btn btn-primary">Ingresar</button>
			</form>
		</div>
	</div>
</div>